<UserControl x:Class="ModbusSimulator.Views.UcSlave"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModbusSimulator.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="650" Width="850"
             mc:Ignorable="d">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="1" Grid.RowSpan="3" Style="{x:Null}" Header="记录" Margin="20,0,0,20">
            <ListBox ItemsSource="{Binding LogCollection}" BorderThickness="0"/>
        </GroupBox>

        <GroupBox Grid.Row="0" Padding="5" Margin="0,0,0,20">
            <GroupBox.Style>
                <Style TargetType="GroupBox" BasedOn="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Serial">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </GroupBox.Style>

            <GroupBox.Header>
                <Ellipse Fill="{Binding Color}" Width="20" Height="20"/>
            </GroupBox.Header>

            <WrapPanel Orientation="Horizontal" ItemWidth="140">

                <hc:TextBox hc:TitleElement.Title="从站地址：" hc:TitleElement.TitlePlacement="Top" Text="{Binding SlaveId}"/>

                <hc:ComboBox hc:TitleElement.Title="大小端：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedEndian}">
                    <ComboBoxItem Content="BigEndian"/>
                    <ComboBoxItem Content="LittleEndian" IsSelected="True"/>
                    <ComboBoxItem Content="BigEndianByteSwap"/>
                    <ComboBoxItem Content="LittleEndianByteSwap"/>
                </hc:ComboBox>

                <hc:ComboBox hc:TitleElement.Title="串口号：" hc:TitleElement.TitlePlacement="Top" ItemsSource="{Binding Ports}" SelectedIndex="0" SelectedItem="{Binding SelectedPort}"/>

                <hc:ComboBox hc:TitleElement.Title="波特率：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedBaudRate}">
                    <ComboBoxItem Content="4800"/>
                    <ComboBoxItem Content="9600" IsSelected="True"/>
                    <ComboBoxItem Content="14400"/>
                    <ComboBoxItem Content="19200"/>
                    <ComboBoxItem Content="38400"/>
                    <ComboBoxItem Content="56000"/>
                    <ComboBoxItem Content="57600"/>
                    <ComboBoxItem Content="115200"/>
                </hc:ComboBox>

                <hc:ComboBox hc:TitleElement.Title="校验位：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedParity}">
                    <ComboBoxItem Content="None" IsSelected="True"/>
                    <ComboBoxItem Content="Odd"/>
                    <ComboBoxItem Content="Even"/>
                </hc:ComboBox>

                <hc:ComboBox hc:TitleElement.Title="数据位：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedDataBits}">
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8" IsSelected="True"/>
                </hc:ComboBox>

                <hc:ComboBox hc:TitleElement.Title="停止位：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedStopBits}">
                    <ComboBoxItem Content="1" IsSelected="True"/>
                    <ComboBoxItem Content="2"/>
                </hc:ComboBox>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Button Content="刷新" Command="{Binding RefreshCMD}"/>
                    <Button Content="监听" Command="{Binding ConnectCMD}"/>
                    <Button Content="停止" Command="{Binding DisconnectCMD}"/>
                </StackPanel>

            </WrapPanel>
        </GroupBox>

        <GroupBox Grid.Row="0" Padding="5" Margin="0,0,0,20">
            <GroupBox.Style>
                <Style TargetType="GroupBox" BasedOn="{x:Null}">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Type}" Value="Tcp">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </GroupBox.Style>

            <GroupBox.Header>
                <Ellipse Fill="{Binding Color}" Width="20" Height="20"/>
            </GroupBox.Header>

            <WrapPanel Orientation="Horizontal" ItemWidth="140">

                <hc:TextBox hc:TitleElement.Title="从站地址：" hc:TitleElement.TitlePlacement="Top" Text="{Binding SlaveId}"/>

                <hc:ComboBox hc:TitleElement.Title="大小端：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedEndian}">
                    <ComboBoxItem Content="BigEndian"/>
                    <ComboBoxItem Content="LittleEndian" IsSelected="True"/>
                    <ComboBoxItem Content="BigEndianByteSwap"/>
                    <ComboBoxItem Content="LittleEndianByteSwap"/>
                </hc:ComboBox>

                <hc:TextBox hc:TitleElement.Title="IP：" hc:TitleElement.TitlePlacement="Top" Text="{Binding IP}"/>

                <hc:TextBox hc:TitleElement.Title="Port：" hc:TitleElement.TitlePlacement="Top" Text="{Binding Port}"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Button Content="刷新" Command="{Binding RefreshCMD}"/>
                    <Button Content="监听" Command="{Binding ConnectCMD}"/>
                    <Button Content="停止" Command="{Binding DisconnectCMD}"/>
                </StackPanel>

            </WrapPanel>
        </GroupBox>

        <GroupBox Grid.Row="1" Style="{x:Null}" Padding="5" Margin="0,0,0,20" Header="读写">
            <WrapPanel Orientation="Horizontal" ItemWidth="140">

                <hc:ComboBox hc:TitleElement.Title="读写模式：" hc:TitleElement.TitlePlacement="Top" SelectedValuePath="Content" SelectedValue="{Binding SelectedMode}">
                    <ComboBoxItem Content="读"/>
                    <ComboBoxItem Content="写"/>
                </hc:ComboBox>

                <hc:TextBox hc:TitleElement.Title="起始地址：" hc:TitleElement.TitlePlacement="Top" Text="{Binding StartAddress,UpdateSourceTrigger=PropertyChanged}"/>

                <hc:ComboBox hc:TitleElement.Title="数据类型：" hc:TitleElement.TitlePlacement="Top" ItemsSource="{Binding DataTypeValues}" SelectedItem="{Binding SelectedType}"/>

                <hc:TextBox hc:TitleElement.Title="数据长度：" hc:TitleElement.TitlePlacement="Top" Text="{Binding NumRegisters,UpdateSourceTrigger=PropertyChanged}"/>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Button Content="读/写" Command="{Binding ExecuteCMD}" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                    <CheckBox Content="持续" IsChecked="{Binding IsContinue}"/>
                </StackPanel>

            </WrapPanel>
        </GroupBox>

        <GroupBox Grid.Row="2" Style="{x:Null}" Header="寄存器" Padding="5" Margin="0,0,0,20">
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding Items}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <hc:TextBox MinHeight="35" MinWidth="120" Margin="0,10,0,0" hc:TitleElement.Title="{Binding Index, StringFormat='起始地址：{0}'}" hc:TitleElement.TitlePlacement="Top" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" IsEnabled="{Binding Enable}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!--<hc:TextBox MinHeight="35" MinWidth="100" Margin="0,10,0,0" hc:TitleElement.Title="{Binding Item.Index}" hc:TitleElement.TitlePlacement="Top" Text="{Binding Item.Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" VerticalContentAlignment="Top" HorizontalContentAlignment="Left" Padding="3" IsEnabled="{Binding Enable}"/>-->

        </GroupBox>

    </Grid>
</UserControl>
